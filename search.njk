{% block content %}

<main class="l-main l-spacing-l">
  <form class="c-form j-form o-distributed o-distributed--center l-spacing-l l-spacing-top-m">
    <label class="c-form__label" for="search_id">Search...</label>
    <input class="c-form__input j-search__input" type="search" value="" id="search_id" placeholder="Search...">
  </form>

  <ul class="s-search-list">
    {% for entry in collections.posts %}
      <li class="j-search__item l-spacing-m">
        {% set card = { data: entry.data, modifiers: ['squared-image', 'horizontal'], hasImg: true } %}
        {% include '_includes/layouts/partials/card.njk' %}
      </li>
    {% endfor %}
  </ul>

