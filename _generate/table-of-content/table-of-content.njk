---
title: Table of contents
layout: layouts/base.njk
paletteColor: 3
eleventyExcludeFromCollections: true
---

{% block content %}

<main id="main" class="l-main l-spacing-l">
  {# legend #}
  <h3>Legend:</h3>
  <ul>
    <li>T = TIL</li>
    <li>P = Projects</li>
    <li>B = Blog (tutorials)</li>
  </ul>

  {# table #}
  <h3>Posts:</h3>
  <table class="c-table">
    <thead>
      <tr>
        <td><strong>ID</strong></td>
        <td><strong>Title</strong></td>
        <td><strong>Category</strong></td>
      </tr>
    </thead>
    <tbody>
      {%- for entry in collections.all %}
        {% if entry.data.id %}
        <tr>
          <td>{{ entry.data.id }}</td>
          <td>{{ entry.data.title }}</td>
          <td>{{ entry.data.category }}</td>
        </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  </table>
</main>

{% endblock %}
