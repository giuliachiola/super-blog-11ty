---
layout: layouts/base.njk
hasHero: true
---
<main class="l-main">
  <article class="c-article-section l-spacing-l">
    <h1>{{ title }}</h1>
    {% if date %}
      <time class="c-article-section__date" datetime="{{ date }}">{{ date.toDateString() }}</time>
    {% endif %}

    {# tags #}
    {%- for tag in tags %}
    {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="c-label">{{ tag }}</a>
    {%- endfor %}

    {# content #}
    <div class="c-article-section__content">
      {{ content | safe }}
    </div>
  </article>

  {% if eleventyNavigation.key !== 'about' %}
    {% for randomTil in collections.randomTilArr %}
      <div class="o-distributed o-distributed--center l-spacing-l">
        <a class="c-button" href="{{ randomTil.url | url }}">Take me to another post!</a>
      </div>
    {% endfor %}
  {% endif %}
</main>


