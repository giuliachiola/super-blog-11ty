<!doctype html>
<html lang="en">
  <head>
    {# Palette color #}
    {% set color = [1,2,3,4,5] | random %}
    {% if paletteColor %}
      {% set color = paletteColor %}
    {% endif %}

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or renderData.title | striptags }} | Giulia Chiola</title>
    {# favicon #}
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon-color-{{ color }}.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32-color-{{ color }}.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16-color-{{ color }}.png">
    <link rel="manifest" href="/site-color-{{ color }}.webmanifest">
    {# share #}
    {% set ogImage = '/img/og-images/' + ogImage + '.jpg' %}
    {% if mainTag %}
      {% set ogImage = '/img/og-images/' + mainTag + '.jpg' %}
    {% endif %}
    {# twitter share #}
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@giuliachiola" />
    <meta name="twitter:creator" content="@giuliachiola" />
    <meta name="twitter:title" content="{{ title }}" />
    <meta name="twitter:description" content="{{ abstract }}" />
    <meta name="twitter:image" content="{{ ogImage }}" />
    {# og #}
    <meta property="og:url" content="{{ entry.url | url }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ abstract }}" />
    <meta property="og:image" content="{{ ogImage }}" />
    {# css #}
    <link rel="stylesheet" href="/css/prismjs-theme.css">
    <link rel="stylesheet" href="/css/gist-syntax-theme.css">
    {# css from styleguide repo #}
    <link rel="stylesheet" href="/super-styleguide/src/css/style.css">
    {# colors override to test #}
    <link rel="stylesheet" href="/css/color-palette.css">
  </head>

  <body>
    <div class="l-wrapper t-palette-color--{{ color }}">
      {# header #}
      {% include 'layouts/partials/header.njk' %}

      {% if hasHomeContent %}
        {# home content #}
        {% include 'layouts/partials/photogrid.njk' %}
      {% else %}
        {# base content #}
        {% include './base-content.njk' %}
      {% endif %}

      {# footer #}
      {% include 'layouts/partials/footer.njk' %}
    </div>

    {# script #}
    <script src="/js/script.js"></script>
  </body>
</html>
