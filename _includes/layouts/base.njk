<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {# twitter share #}
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@giuliachiola" />
    <meta name="twitter:creator" content="@giuliachiola" />
    <meta name="twitter:title" content="{{ title }}" />
    <meta name="twitter:description" content="{{ abstract }}" />
    <meta name="twitter:image" content="{{ img }}" />
    <meta property="og:url" content="{{ entry.url | url }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ abstract }}" />
    <meta property="og:image" content="{{ img }}" />
    {# css #}
    <link rel="stylesheet" href="/css/prismjs-theme.css">
    <link rel="stylesheet" href="/css/gist-syntax-theme.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="l-wrapper">
      {# header #}
      {% include 'layouts/partials/header.njk' %}

      {% if hasHomeContent %}
        {# home content #}
        {% include 'layouts/partials/photogrid.njk' %}
      {% else %}
        {# base content #}
        {% include './base-content.njk' %}
      {% endif %}

      {# footer #}
      {% include 'layouts/partials/footer.njk' %}
    </div>

    {# script #}
    <script>
      // Get the checkbox
      const checkbox = document.querySelector(".c-header__toggle");
      checkbox.addEventListener('change', function() {
        document.body.classList.toggle("is-menu-open");
      });
      // Search post
      const form = document.querySelector('.j-form')
      const searchButton = form.querySelector('.j-search__button');

      searchButton.addEventListener('click', function() {
        const search = form.querySelector('.j-search__input');
        const searchValue = search.value.toLocaleLowerCase()
        console.log('search.value >>>>', searchValue)

        const posts = document.querySelectorAll('.c-card')
        for (const post of posts) {
          const title = post.querySelector('.c-card__title-heading')
          const abstract = post.querySelector('.c-card__abstract')

          if (title.textContent.toLocaleLowerCase().includes(searchValue) || abstract.textContent.toLocaleLowerCase().includes(searchValue)) {
            // show the post
            title.closest('.j-search__item').style.display = 'block';
          } else {
            // hide the post
            title.closest('.j-search__item').style.display = 'none';
          }
        }
      });
    </script>
  </body>
</html>
