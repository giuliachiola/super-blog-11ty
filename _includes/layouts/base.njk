<!doctype html>
<html lang="en">
  <head>
    {# Palette color #}
    {% set randColor = [ { num: 1, hex: '#ef476f' }, { num: 2, hex: '#ffc233' }, { num: 3, hex: '#06d6a0' }, { num: 4, hex: '#1b98e0' }, { num: 5, hex: '#ff9f1c' } ] | random %}
    {% set colorN = randColor.num %}
    {% if paletteColor %}
      {% set colorN = paletteColor %}
    {% endif %}
    {# info #}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or renderData.title | striptags }} | Giulia Chiola</title>
    <meta name="description" content="{{ abstract or subtitle }}">
    {# search engine #}
    <meta name="robots" content="index,follow"><!-- All Search Engines -->
    {# archive #}
    <link rel="archives" href="{{ global.siteUrl | url }} + '/search'">
    {# theme color #}
    <meta name="theme-color" content="{{ randColor.hex }}">
    {# favicon #}
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon-color-{{ colorN }}.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon/favicon-32x32-color-{{ colorN }}.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/favicon/favicon-16x16-color-{{ colorN }}.png">
    <link rel="manifest" href="/site-color-{{ colorN }}.webmanifest">
    {# share #}
    {% set ogImage = global.siteUrl + '/img/og-images/default.jpg' %}
    {% if mainTag %}
      {% set ogImage = global.siteUrl + '/img/og-images/' + mainTag + '.jpg' %}
    {% endif %}
    {# share - twitter #}
    <meta name="twitter:card" content="summary">
    <meta name="twitter:creator" content="@giulia_chiola">
    <meta name="twitter:title" content="{{ title }}">
    <meta name="twitter:description" content="{{ abstract or subtitle }}">
    <meta name="twitter:image" content="{{ ogImage }}">
    {# <meta name="twitter:image:alt" content="A description of what is in the image (not a caption)"> #}
    {# share - og facebook #}
    <meta property="og:url" content="{{ global.siteUrl | url }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:image" content="{{ ogImage }}">
    {# <meta property="og:image:alt" content="A description of what is in the image (not a caption)"> #}
    <meta property="og:description" content="{{ abstract or subtitle }}">
    <meta property="og:site_name" content="Blog | Giulia Chiola">
    <meta property="og:locale" content="en_US">
    <meta property="article:author" content="Giulia Chiola">

    {# css #}
    <link rel="stylesheet" href="/css/prismjs-theme.css">
    <link rel="stylesheet" href="/css/gist-syntax-theme.css">
    {# css from styleguide repo #}
    <link rel="stylesheet" href="/super-styleguide/src/css/style.css">
    {# colors override to test #}
    <link rel="stylesheet" href="/css/color-palette.css">
  </head>

  <body>
    <div class="l-wrapper t-palette-color--{{ colorN }}">
      {# header #}
      {% include 'layouts/partials/header.njk' %}

      {% if hasHomeContent %}
        {# home content #}
        {% include 'layouts/partials/photogrid.njk' %}
      {% else %}
        {# base content #}
        {% include './base-content.njk' %}
      {% endif %}

      {# footer #}
      {% include 'layouts/partials/footer.njk' %}
    </div>

    {# script #}
    <script src="/js/script.js"></script>
  </body>
</html>
