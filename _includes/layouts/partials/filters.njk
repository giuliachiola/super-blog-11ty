<fieldset class="c-filter">
  <legend class="c-filter__legend">Filter by:</legend>
  {# tag in url #}
  {% set _tag = tag %}

  {# tag in collections array #}
  <ul class="c-filter__list">
    {% for tag in collections.tagsArr|removeFromArray('post') %}
      <li class="c-filter__item">
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="c-label" {% if tag == _tag %}data-state="active"{% endif %}>{{ tag | removeDashes }}</a>
      </li>
    {% endfor %}
  </ul>
</fieldset>

