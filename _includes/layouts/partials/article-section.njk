<article class="c-article-section l-spacing-l">
  <h1>{{ title }}</h1>

  <div class="c-article-section__top l-spacing-m">
    <div class="c-article-section__info">
      {# date #}
      {% if date %}
        <time class="c-article-section__date" datetime="{{ date }}">{{ date.toDateString() }}</time>
      {% endif %}

      {# tags #}
      {%- for tag in tags %}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="c-label">{{ tag }}</a>
      {%- endfor %}
    </div>

    <div class="c-article-section__share">
      <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
  </div>

  {# content #}
  <div class="c-article-section__content">
    {{ content | safe }}
  </div>
</article>
